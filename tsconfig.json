{
  "compilerOptions": {
    "module": "ESNext",          
    "target": "ESNext",          
    "moduleResolution": "Node",  
    "jsx": "react-jsx",          
    "esModuleInterop": true,     
    "strict": true,              
    "skipLibCheck": true,        
    "resolveJsonModule": true,   
    "baseUrl": ".",              
    "paths": {
      "@/*": ["src/*"]           
    }
  },
  "include": [
    "src"                      
  ]
}
